{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-underscore-dangle": "off",
    "no-console": "off"

    // "no-alert": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["Views", "./src/views"],
          ["Controllers", "./src/controllers"],
          ["Components", "./src/components"],
          ["Models", "./src/models"],
          ["Modules", "./src/modules"],
          ["SCSS", "./src/styles/scss"]
        ]
      }
    }
  }
}
