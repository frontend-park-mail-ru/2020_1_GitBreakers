extends ../repository/repository.pug
block content
    div.repository__top
        div.repository__top_path #{repName}/#{branchName}/#{filePath}
    if fileType === "fileForLoad"
        div.fileField
            div.fileField__message #{fileContent} #{message}
            div.fileField__message__link
                a#fileLink.loadFile.fileField__link(href = fileUrl download=fileName) Download
    else
        if fileType === "code"
            a#fileLink.loadFile.fileField__link(href = fileUrl download=fileName) Download
            pre.prettyprint.linenums #{fileContent}
        else
            a#fileLink.loadFile.fileField__link(href = fileUrl download=fileName) Download
            div.fileField
                div.fileField__content #{fileContent}
block button
    div.fileField__top.fileField__link
        a#themeStyle
